<h3 class="text-3xl font-semibold text-center mb-2">Signup</h3>
<div class="flex justify-center">
  <div class="p-3 w-3/4 max-w-xl">
    <form
      action="/signup"
      method="POST"
      class="mb-2 flex flex-col justify-center"
    >
      <div class="flex flex-col">
        <label for="username">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="input my-2"
          required
        />
      </div>
      <div class="flex flex-col">
        <label for="email">Email</label>
        <input
          type="text"
          id="email"
          name="email"
          class="input my-2"
          placeholder="john@example.com"
          required
        />
      </div>
      <div class="flex flex-col">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="input my-2"
          required
        />
      </div>

      <div class="text-center">
        <button
          class="btn lg:w-1/4 bg-white border-1 border-orange-600 hover:border-orange-600 hover:bg-orange-600 hover:text-white"
        >
          Signup
        </button>
      </div>
    </form>
  </div>
</div>
