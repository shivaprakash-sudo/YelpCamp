<h3 class="text-3xl font-semibold text-center mb-2">Login</h3>
<div class="flex justify-center">
  <div class="p-3 w-3/4 lg:w-1/2">
    <form
      action="/login"
      method="POST"
      class="mb-2 flex flex-col justify-center"
    >
      <div class="flex flex-col">
        <label for="username">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="input my-2"
          required
        />
      </div>
      <div class="flex flex-col">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="input my-2"
          required
        />
      </div>

      <div class="text-center">
        <button
          class="btn bg-white border-1 border-black hover:bg-green-600 hover:text-white"
        >
          Login
        </button>
      </div>
    </form>
  </div>
</div>
