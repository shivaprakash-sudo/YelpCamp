<h3 class="text-3xl font-semibold text-center mb-2">New Campground</h3>
<div class="flex justify-center">
  <div class="p-3 w-3/4 lg:w-1/2">
    <form
      action="/campgrounds"
      method="POST"
      class="mb-2 flex flex-col justify-center"
      enctype="multipart/form-data"
    >
      <div class="flex flex-col mb-3">
        <label for="title">Campground Title</label>
        <input
          type="text"
          id="title"
          name="campground[title]"
          class="input my-2"
          placeholder="Elk Creekside"
          required
        />
      </div>
      <div class="flex flex-col mb-3">
        <label for="location">Campground Location</label>
        <input
          type="text"
          id="location"
          name="campground[location]"
          class="input my-2"
          placeholder="Peoria, Illinois"
          required
        />
      </div>

      <div class="flex flex-col mb-3">
        <label for="price">Campground Price</label>
        <input
          type="text"
          id="price"
          name="campground[price]"
          class="input my-2"
          placeholder="Â£0.00"
          required
        />
      </div>
      <div class="flex flex-col mb-3">
        <label for="description">Description</label>
        <textarea
          type="text"
          id="description"
          name="campground[description]"
          class="input my-2 h-40"
          placeholder="Write some cool things about the camp here."
          required
        ></textarea>
      </div>
      <div class="flex flex-col mb-3">
        <label for="image">Campground Image</label>
        <input
          type="file"
          name="image"
          id="image"
          class="mt-2 w-full border border-gray-600 p-2 rounded-lg focus:outline-none"
          multiple
        />
        <div id="image-names" class="text-green-500"></div>
      </div>
      <div class="text-center">
        <button class="btn">Add Campground</button>
      </div>
    </form>
    <div class="text-center">
      <a href="/campgrounds" class="btn">Go to All Campgrounds</a>
    </div>
  </div>
</div>

<!-- file input control -->
<script src="/js/fileInputControl.js"></script>
